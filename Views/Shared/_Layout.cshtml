    <div class="sidebar">
        <header class="logo_content">
            <div class="logo">
                <i class='bx bxl-netlify'></i>
                <div class="logo_name">PhysioCard</div>
            </div>
            <i class='bx bx-menu' id="btn"></i>
        </header>
        <ul class="nav_list">
            <li>
                <a asp-controller="DashBoard" asp-action="DashBoard">
                    <i class='bx bx-home-alt-2'></i>
                    <span class="links_name">Dashboard</span>
                </a>
                <span id="tooltip">Dashboard</span>
            </li>
            <li>
                <a asp-controller="Patient" asp-action="addPatient">
                    <i class='bx bx-user-plus'></i>
                    <span class="links_name">Add Patient</span>
                </a>
                <span id="tooltip">Add Patient</span>
            </li>
            <li>
                <a asp-controller="Patient" asp-action="showPatient">
                    <i class='bx bxs-user-account'></i>
                    <span class="links_name">Show Patient</span>
                </a>
                <span id="tooltip">Show Patient</span>
            </li>
            <li>
                <a asp-controller="DashBoard" asp-action="DashBoard">
                    <i class='bx bx-calendar'></i>
                    <span class="links_name">Appointment Calendar</span>
                </a>
                <span id="tooltip">Appointment Calendar</span>
            </li>
            <li>
                <a asp-controller="Appointment" asp-action="FixAppointment">
                    <i class='bx bx-calendar-plus'></i>
                    <span class="links_name">Schedule Appointment</span>
                </a>
                <span id="tooltip">Schedule Appointment</span>
            </li>
            <li>
                <a asp-controller="Appointment" asp-action="showAppointment">
                    <i class='bx bx-calendar-heart'></i>
                    <span class="links_name">Show Appointment</span>
                </a>
                <span id="tooltip">Show Appointment</span>
            </li>
            <li>
                <a asp-controller="Attendance" asp-action="showTodaysAppointment">
                    <i class='bx bxs-user-check'></i>
                    <span class="links_name">Attendance</span>
                </a>
                <span id="tooltip">Attendance</span>
            </li>
            <li>
                <a asp-controller="DashBoard" asp-action="DashBoard">
                    <i class='bx bx-spreadsheet'></i>
                    <span class="links_name">Generate Invoice</span>
                </a>
                <span id="tooltip">Generate Invoice</span>
            </li>
            <li>
                <a asp-controller="DashBoard" asp-action="DashBoard">
                    <i class='bx bx-check-square'></i>
                    <span class="links_name">Payment Status</span>
                </a>
                <span id="tooltip">Payment Status</span>
            </li>
            <li>
                <a asp-controller="Clinic" asp-action="AddDoctorClinic">
                    <i class='bx bx-clinic'></i>
                    <span class="links_name">Add Clinic</span>
                </a>
                <span id="tooltip">Add Clinic</span>
            </li>
            @*<li>
