            </a>
            <span id="tooltip">Change Password</span>
            </li>*@
        </ul>
        <div class="profile_content">
            <div class="profile">
                <a class="profile_details" asp-controller="Doctor" asp-action="ViewProfile">
                    <img src="~/@ViewBag.data[1]" />
                    <div class="profile_name">
                        <div class="name">Dr. @ViewBag.data[2]</div>
                    </div>
                </a>
                <a asp-controller="Doctor" asp-action="Logout"><i class='bx bx-log-out-circle' title="Log Out" id="log_out"></i></a>
            </div>
        </div>
    </div>
    <div class="home_content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

