@model physioCard.Domain.OTPModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout1";
}
@{
}
<link rel="stylesheet" href="~/css/loginSite.css" asp-append-version="true" />
<div class="container">
    <div class="wrapper">
        <div class="shadow-sm card p-3 mb-5 rounded">
            @*<div class="headline">
                <h1>Forget Password</h1>
            </div>*@
            <div class="error">
                @{
                    if (ViewBag.Status == false)
                    {
                        <div>
                            <div class="text-danger">OTP HAS NOT SEND DUE TO SOME NETWORK ISSUES</div>
                        </div>
                    }
                    if (ViewBag.msg == false)
                    {
                        <div>
                            <div class="text-danger">PLEASE ENTER THE EMAIL WHICH YOU HAVE PROVIDED DURING SIGNUP</div>
                        </div>
                    }
                    if (ViewBag.Status == true)
                    {
                        <div>
                            <div class="text-success">OTP HAS BEEN SEND SUCCESSFULLY</div>
                        </div>
                    }
                    if (ViewBag.msgofsomethingwentwrong == false)
                    {
                        <div>
                            <div class="text-danger">OTP MUST NOT BE NULL AND SHOULD BE OF 6 DIGITS</div>
                        </div>
                    }
                    if (ViewBag.msgforincorrectOTP == false)
                    {
                        <div>
                            <div class="text-danger">OTP DOESN'T MATCH. GENERATE AGAIN</div>
                        </div>
                    }
                }
            </div>
            <form method="post" class="form" asp-action="sendOTP">
                <div class="forgetPassword">
                    <div class="form-group">
                        <input asp-for="email" id="txtemail" class="form-control" placeholder=" " />
                        <label asp-for="email" class="form-label">E-mail </label>
                    </div>
                    <div>
                        <span class="text-danger" asp-validation-for="email"></span>
                    </div><br />
                    <input type="submit" class="btn btn-dark" value="Send OTP" id="btnsendotp" /><br />
                </div>
            </form>
        </div>
        @*<hr />*@
    </div>
</div>
<style>
    .form-group {
        position: relative;
    }

    .form-control {
        width: 300px;
    }

    .form-label {
        position: absolute;
        top: 0.4rem;
        left: 1.0rem;
        cursor: text;
    }

    .form-control:focus ~ .form-label /*, .form-control:not(:empty) .form-control:not(:focus) ~ .form-label*/, .form-control:not(:placeholder-shown).form-control:not(:focus) ~ .form-label {
        top: -0.7rem;
        font-size: 13px;
        background: white;
    }
</style>