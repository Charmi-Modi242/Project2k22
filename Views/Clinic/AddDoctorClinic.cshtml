@model physioCard.Domain.Doctor_Clinic
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    if ((bool)ViewData["Isclinic"])
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_Layout1";
    }
}
<link rel="stylesheet" href="~/css/formSite.css" asp-append-version="true" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<div class="container">
    @*<h1>Clinic</h1>
    <hr /><br />*@

    <div>
        <div class="main-flex">
            <div class="main-fitem mf1">
                <div class="shadow-sm card p-3 mb-5 rounded">
                    <form asp-action="AddDoctorClinic" method="post">
                        <input asp-for="docID" type="hidden" value=@ViewBag.did />
                        <div class="form-group" @*style="width: 120%;"*@>
                            <div class="form-outline">
                                <select asp-for="clinics" class="form-control" id="custom" asp-items=ViewBag.clinics>
                                    @*<option value="" selected="selected" disabled="disabled">Please select any clinic</option>*@
                                    @*<option value="1">XYZ</option>
                                    <option value="2">ABC</option>*@
                                </select>
                                <label class="form-label">Clinic </label>
                            </div>
                            <span asp-validation-for="clinics" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                        <div class="form-outline">
                        <a class="btn btn-primary" asp-action="CreateClinic">Register New Clinic</a>
                        </div>
                        </div>*@
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-dark" />
                            <a class="btn btn-primary" asp-action="CreateClinic">Add Another Clinic</a>
                            @*@{
                            if ((bool)ViewData["Isclinic"])
                            {
                            <a asp-controller="DashBoard" asp-action="DashBoard" class="btn btn-outline-dark">Back To DashBoard</a>
                            }
                            else
                            {
                            <a asp-action="AddDoctorClinic" class="btn btn-outline-dark">Reset</a>
                            }
                            }*@
                        </div>
                    </form>
                </div>
            </div>
            <div class="main-fitem mf2">
                @*<img src="/svgs/clinic.svg" class="svgImg" />*@
            </div>
        </div>
    </div>
</div>

@*applying css on textboxes*@
<style>
    .form-outline {
        position: relative;
    }

    .mf1 {
        align-self: center;
        padding-right: 5rem;
    }

    .form-label {
        position: absolute;
        top: 0.3rem;
        left: 0.6rem;
        /*padding-left: 0.3rem;*/
        cursor: text;
    }

    #custom:focus ~ .form-label,
    #custom:not(:placeholder-shown)#custom:not(:focus) ~ .form-label {
        top: -0.8rem;
        left: 0.5rem;
        font-size: 13px;
        background: white;
    }
</style>

<script type="text/javascript">
    $(document).ready(function() {
        $('#custom').select2();
    });
</script>
