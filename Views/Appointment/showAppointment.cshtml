@{
    ViewData["Title"] = "Show Appointment";
    if (ViewBag.statusupdate == true)
    {
        <script>
            swal({
                title: "Success",
                text: "Appointment Reschedule Successfully",
                type: "success",
                timer: 1500,
                showCancelButton: false,
                showConfirmButton: false
            });
        </script>
    }
    if (ViewBag.statusupdate == false)
    {
        <script>
            swal({
